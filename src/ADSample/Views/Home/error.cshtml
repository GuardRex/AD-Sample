@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Error";
    ViewBag.Description = "An error occurred processing your request.";
    ViewBag.ItemPropName = "Error";
    ViewBag.ItemPropUrl = "//www.XXXXXX.com/" + Context.Request.Path;
    ViewBag.Keywords = "";
}<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 center">
        <div style="max-width:500px;padding:0 20px;margin:0 auto">
            <h1 style="font-size:20px">The page or resource cannot be provided</h1>
            <hr>
            <h3>@ViewBag.Exception</h3>
            <hr>
            <p>If you think the resource should have been provided, please contact the website administrator to let them know that this error has occured for this web address.</p>
        </div>
    </div>
</div>